[Unit]
Description=Marathon
After=network.target
Wants=network.target

[Service]
EnvironmentFile=-/etc/sysconfig/marathon
ExecStart=/usr/bin/marathon --plugin_dir /etc/marathon/plugins/ --plugin_conf /etc/marathon/plugins-conf.json --enable_features external_volume
Restart=always
RestartSec=20

[Install]
WantedBy=multi-user.target